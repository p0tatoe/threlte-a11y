{
	"name": "@p0tatoe/threlte-a11y",
	"version": "0.0.1",
	"description": "Provide accessibility support to Threlte such as focus indication, keyboard tab index, and screen reader support",

	"license": "MIT",

	"keywords": [
		"a11y",
		"accessibility",
		"three",
		"svelte",
		"threlte"
  	],

	"repository": {
		"type": "git",
		"url": "git+https://github.com/p0tatoe/threlte-a11y.git"
  	},

	"bugs": {
    	"url": "https://github.com/p0tatoe/threlte-a11y/issues"
  	},

	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/package": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"publint": "^0.3.15",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@threlte/core": "^8.3.0",
		"@threlte/extras": "^9.7.1",
		"@types/three": "^0.181.0",
		"three": "^0.181.2"
	}
}
